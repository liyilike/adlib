<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exit_lin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">


    <RelativeLayout
        android:id="@+id/adRel"
        android:layout_width="wrap_content"
        android:layout_height="274dp"
        android:background="@drawable/img_tebietuijian"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp">


        <ImageView
            android:id="@+id/myban"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/myban"
            android:scaleType="centerCrop" />


        <FrameLayout
            android:id="@+id/adimg"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_alignParentBottom="true" />


        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#80000000"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="8dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/ad_ban_please"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignLeft="@+id/adRel"
        android:layout_below="@+id/adRel"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <Button
            android:id="@+id/left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_26_copy"
            android:text="@string/ad_ban_look"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/left"
            android:layout_weight="1"
            android:background="@drawable/rectangle_26_copy"
            android:text="@string/ad_ban_exit"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


    </LinearLayout>


</RelativeLayout>