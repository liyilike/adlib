<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exit_lin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">


    <RelativeLayout
        android:id="@+id/adRel"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@drawable/bg_ads_popup"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <FrameLayout
            android:id="@+id/adimg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="#FFFFFF"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/adRel"
        android:layout_below="@+id/adRel">

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="5" />


        <Button
            android:id="@+id/left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_ads_single"
            android:text="进去看看Go>>"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="5" />
        <!-- <View
             android:layout_width="20dp"
             android:layout_height="10dp"/>

         <ImageView
             android:id="@+id/right"
             android:layout_toRightOf="@+id/left"
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/selector_exit_right_but"/>-->

    </LinearLayout>

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_ads_close"/>

</RelativeLayout>